{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "src/*",
        "src/*/**"
      ]
    },
    "lib": ["esnext", "dom"],
    "types": ["vite/client","@types/node"],
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
