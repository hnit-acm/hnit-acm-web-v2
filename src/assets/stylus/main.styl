.flex-col
  display flex
  flex-direction column

.flex-col-center
  @extend .flex-col
  justify-content center

.flex-col-start
  @extend .flex-col
  justify-content flex-start

.flex-col-end
  @extend .flex-col
  justify-content flex-end

.flex-align-center
  align-items center

.flex-align-start
  align-items flex-start

.flex-align-end
  align-items flex-end

.flex-row
  display flex
  flex-direction row

.flex-row-center
  @extend .flex-row
  justify-content center

.flex-row-start
  @extend .flex-row
  justify-content flex-start

.flex-row-end
  @extend .flex-row
  justify-content flex-end
